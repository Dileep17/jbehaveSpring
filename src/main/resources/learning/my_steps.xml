<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="Context" class="learning.models.Context"/>

    <bean class="learning.steps.Hooks">
        <property name="context" ref="Context" />
    </bean>

    <bean class="learning.steps.MyStepsOne">
        <property name="context" ref="Context" />
    </bean>

    <bean class="learning.steps.MyStepsTwo">
        <property name="context" ref="Context" />
    </bean>

    <bean class="learning.steps.GmailStepDefs">
        <property name="context" ref="Context" />
    </bean>

    <bean class="learning.steps.AutomationPracticeStepDefs">
        <property name="context" ref="Context" />
    </bean>

</beans>



